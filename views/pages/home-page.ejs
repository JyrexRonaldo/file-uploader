<%- include('../partials/header'); -%>

<body>
  <header>
    <p>File uploader</p>
    <a href="/log-out">Log out</a>
  </header>
  <main>
    <div>
      <form action="/storage/folder"><button>Add folder</button></form>
      <form action="/storage/file"><button>Upload file</button></form>
    </div>
    <div>
      <% if (currentFolderName) {%>
      <p><%= currentFolderName %></p>
      <% } else { %>
        <p>Storage</p>
      <% }  %>
    </div>
    <div>

      <% items.forEach((item) => { %>
      <% if (item.type === "FOLDER")  {%>
      <%- include('../partials/folder-record', { item: item }); %>
      <% } else { %>
      <%- include('../partials/file-record', { item: item }); %>
      <% }  %>
      <% }); %>

    </div>
  </main>

</body>

</html>