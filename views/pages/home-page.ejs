<%- include('../partials/header'); -%>

<body>
  <header>
    <p>File uploader</p>
    <a href="/log-out">Log out</a>
  </header>
  <main>
    <div>
      <a href="/storage/folder?folderId=<%= folderId %>"><button type="button">Add folder</button></a>
      <a href="/storage/file?folderId=<%= folderId %>"><button>Upload file</button></a>
    </div>
    <div>
      <% if (currentFolderName) {%>
      <p><%= currentFolderName %></p>
      <% } else { %>
        <p>Storage</p>
      <% }  %>
    </div>
    <div>

      <% items.forEach((item) => { %>
      <% if (item.type === "FOLDER")  {%>
      <%- include('../partials/folder-record', { item: item }); %>
      <% } else { %>
      <%- include('../partials/file-record', { item: item }); %>
      <% }  %>
      <% }); %>

    </div>
  </main>

</body>

</html>